    xmlns:cdv   = "http://cordova.apache.org/ns/1.0"
    id          = "com.rodrigoleal.puzzle"
    versionCode = "1"
    version     = "1.0.0" >

<!-- versionCode is optional and Android only -->

  <name>Puzzle</name>

  <description>
      An application for aid the child with mental disorders.
  </description>

